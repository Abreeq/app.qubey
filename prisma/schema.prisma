generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/// *
/// * ======================
/// * USER MODEL
/// * ======================
model User {
  id            String        @id @default(uuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  accounts      Account[]
  organizations Organization?
  sessions      Session[]
}

/// *
/// * ======================
/// * OAUTH ACCOUNTS
/// * ======================
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

/// *
/// * ======================
/// * SESSIONS
/// * ======================
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// *
/// * ======================
/// * EMAIL VERIFICATION / RESET
/// * ======================
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id              String              @id @default(cuid())
  name            String
  ownerId         String              @unique
  createdAt       DateTime            @default(now())
  complianceScore Float               @default(0)
  riskLevel       String              @default("Unknown")
  openGaps        Int                 @default(0)
  companySize     String
  country         String              @default("UAE")
  handlesPII      Boolean             @default(false)
  handlesPayments Boolean             @default(false)
  industry        String
  profileVersion  Int                 @default(1)
  updatedAt       DateTime?           @updatedAt
  industryOther   String?
  actions         ComplianceAction[]
  snapshot        ComplianceSnapshot?
  owner           User                @relation(fields: [ownerId], references: [id])
  risks           Risk[]
}

model Assessment {
  id                  String               @id @default(cuid())
  userId              String
  organizationId      String
  status              String               @default("IN_PROGRESS")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  profileVersion      Int                  @default(1)
  complianceActions   ComplianceAction[]
  complianceSnapshots ComplianceSnapshot[]
  questions           Question[]
  risks               Risk[]
}

model Question {
  id           String     @id @default(cuid())
  assessmentId String
  text         String
  category     String
  weight       Int        @default(1)
  answers      Answer[]
  assessment   Assessment @relation(fields: [assessmentId], references: [id])
}

model Answer {
  id         String   @id @default(cuid())
  questionId String
  value      String
  notes      String?
  question   Question @relation(fields: [questionId], references: [id])
}

model Report {
  id              String   @id @default(cuid())
  userId          String
  organizationId  String
  assessmentId    String   @unique
  score           Float
  riskLevel       String
  openGaps        Int
  summary         String
  keyFindings     String
  recommendations String
  createdAt       DateTime @default(now())
}

model ComplianceSnapshot {
  id               String       @id @default(cuid())
  organizationId   String       @unique
  readinessScore   Float
  riskLevel        String
  actionsCompleted Int          @default(0)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  highRiskCount    Int          @default(0)
  lastAssessmentAt DateTime?
  scoreImprovement Float          @default(0)
  actionsPending   Int          @default(0)
  assessmentId     String
  assessment       Assessment   @relation(fields: [assessmentId], references: [id])
  organization     Organization @relation(fields: [organizationId], references: [id])
}

model Risk {
  id             String       @id @default(cuid())
  organizationId String
  title          String
  severity       String
  status         String
  createdAt      DateTime     @default(now())
  assessmentId   String
  assessment     Assessment   @relation(fields: [assessmentId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model ComplianceAction {
  id               String       @id @default(cuid())
  organizationId   String
  title            String
  description      String
  expectedIncrease Float
  status           String
  createdAt        DateTime     @default(now())
  remediationSteps String?
  assessmentId     String
  assessment       Assessment   @relation(fields: [assessmentId], references: [id])
  organization     Organization @relation(fields: [organizationId], references: [id])
}

/// *
///  * ======================
///  * USER ROLES
///  * ======================
enum Role {
  USER
  ADMIN
}
